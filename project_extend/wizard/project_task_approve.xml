<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="project_task_approve_wizard_view_form" model="ir.ui.view">
        <field name="name">project.task.approve.wizard.view.form</field>
        <field name="model">project.task.approve.wizard</field>
        <field name="arch" type="xml">
            <form string="Project Task">
                <group>
                    <field name="reason" />
                </group>
                <footer>
                    <button string="Confirm" name="action_approve" type="object" class="btn-primary"/>
                    <button string="Discard" class="btn-secondary" special="cancel" data-hotkey="z" />
                </footer>
            </form>
        </field>
    </record>

</odoo>
